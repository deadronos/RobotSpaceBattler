{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BattleUiState",
  "type": "object",
  "properties": {
    "inRound": { "type": "boolean" },
    "activeUI": { "type": "string", "enum": ["battle", "lobby", "summary"] },
    "userPreferences": {
      "type": "object",
      "properties": {
        "reducedMotion": { "type": "boolean" },
        "minimalUi": { "type": "boolean" },
        "followModeShowsPerRobot": { "type": "boolean" }
      },
      "required": ["reducedMotion","minimalUi","followModeShowsPerRobot"]
    },
    "lastToggleTime": { "type": ["integer","null"] }
  },
  "required": ["inRound","activeUI","userPreferences"]
}
