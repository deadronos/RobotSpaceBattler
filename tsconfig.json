{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": [
      "vitest",
      "vitest/globals",
      "vite/client",
      "react",
      "react-dom"
    ]
  },
  "include": [
    "src",
    "tests",
    "scripts",
    "vite.config.ts",
    "vitest.config.ts",
    "playwright.config.ts"
  ]
}
